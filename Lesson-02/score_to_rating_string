def score_to_rating_string(av_score): 
    """
    Convert the average score, which should be between 0 and 5, 
    into a rating.
    """
    if av_score < 1:
        return "Terrible"
    elif av_score < 2:
        return "Bad"
    elif av_score < 3:
        return "OK"
    elif av_score < 4:
        return "Good"
    else:
        return "Excellent"